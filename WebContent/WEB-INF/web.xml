<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>pb-web</display-name>
  <welcome-file-list>
<!--     <welcome-file>index.html</welcome-file> -->
<!--     <welcome-file>index.htm</welcome-file> -->
<!--     <welcome-file>index.jsp</welcome-file> -->
<!--     <welcome-file>default.html</welcome-file> -->
<!--     <welcome-file>default.htm</welcome-file> -->
<!--     <welcome-file>default.jsp</welcome-file> -->
<welcome-file>/client/pbapp.html</welcome-file>
  </welcome-file-list>
   <session-config>
      <session-timeout>-1</session-timeout>
   </session-config>
   <listener>
      <listener-class>net.segoia.eventbus.events.web.util.SessionLifecycleToEventListener</listener-class>
   </listener>
    <filter>
      <filter-name>reqToEventFilter</filter-name>
      <filter-class>net.segoia.eventbus.events.web.util.RequestToEventFilter</filter-class>
   </filter>
   <servlet>
      <servlet-name>oauth2callback</servlet-name>
      <servlet-class>net.segoia.ogeg.oauth2.callback.Oauth2CallbackServlet</servlet-class>
   </servlet>
   <filter-mapping>
      <filter-name>reqToEventFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
</web-app>